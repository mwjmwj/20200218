  <!-- 查询彩票记录 -->
  <select id="lotteryRecordListCommon" resultMap="BaseResultMap_Details">
    select a.*
    ,b.id as detailId,b.num,b.animal,b.code_type,b.color,b.tl_id,
    (case b.color when '蓝' then '#0000FF' when '红' then '#FF0000' else '#008000' end) as colorCode,
    b.create_tm,b.order
    from
    t_lottery a,t_lottery_detail b
    <where>
      1=1
      and a.id = b.tl_id
      and a.end_tm >= #{lotteryDateBegin} and a.end_tm &lt;= #{lotteryDateEnd}
    </where>
    order by a.end_tm desc,b.order
  </select>

  <!-- 获取最后一个中奖信息 -->
  <select id="getNextLottery" resultMap="BaseResultMap_Details">
    select a.*
    ,b.id as detailId,b.num,b.animal,b.code_type,b.color,b.tl_id,
    (case b.color when '蓝' then '#0000FF' when '红' then '#FF0000' else '#008000' end) as colorCode,
    b.create_tm,b.order
    from
    (SELECT * FROM t_lottery a where a.id in ((SELECT id from t_lottery WHERE end_flag = 1
    ORDER BY end_tm DESC
    LIMIT 1 ),(SELECT id from t_lottery WHERE end_flag = -1
    ORDER BY end_tm
    LIMIT 1))) a LEFT JOIN t_lottery_detail b on a.id = b.tl_id
  </select>
